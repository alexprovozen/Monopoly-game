@import '_libs'
@import '_vars'
@import '_fonts'

body
	font-size 16px
	min-width 320px
	opacity 1
	overflow-x hidden

header 
	padding 15px
	width calc(100vw - 30px)
	height calc(100vh - 30px)
	background-color darken(yellow, 40%)

.box 
	width 100%
	height 100%
	display flex
	flex-wrap wrap
	margin 0 -7.5px

.game-box 
	position relative
	margin 0 7.5px
	width calc(85% - 15px)

.game-height 
	padding-top 50%

.game-field, .players 
	border-radius 5px
	border 3px solid black

.game-field
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	display flex
	flex-direction column

.players 
	margin 0 7.5px
	width calc(15% - 15px)
	display flex
	flex-direction column
	height 100%
	.player 
		flex-basis 20%
		& + .player 
			border-top 3px solid black

.top-row 
	border-bottom 3px solid black
	display flex

.middle-row 
	flex-grow 2
	display flex
	.col
		display flex
	.col-left, .col-right 
		display flex
		flex-direction column

.bottom-row 
	border-top 3px solid black
	display flex

.square
	position relative
	flex-basis 15%
	max-width 150px
	flex-grow 1
	&-content 
		position absolute
		top 0
		left 0
		right 0
		bottom 0
	&-height
		padding-top 100%

.cell 
	flex-basis 6.36%
	flex-grow 1

.col-left, .col-right 
	flex-basis 15%
	max-width 150px
	flex-grow 1

.top-border 
	border-top 3px solid black
.left-border 
	border-left 3px solid black
.right-border 
	border-right 3px solid black

.col 
	flex-basis 70%
	flex-grow 1

.interface 
	width 70%
.text 
	width 30%

.col-left .cell, .col-right .cell
	width 100%
	flex-basis 18%

.col-left .cell-big, .col-right .cell-big
	flex-basis 28%