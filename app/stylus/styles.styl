@import '_smart-grid'
@import '_libs'
@import '_vars'
@import '_fonts'

body
	font-size 16px
	min-width 320px
	opacity 1
	overflow-x hidden

.wrapper 
	height 100%
	wrapper()

header 
	padding 15px 0
	width 100vw
	height calc(100vh - 30px)
	min-height 500px
	background-color darken(yellow, 40%)

.box 
	height 100%
	row-flex()

.game-field, .players 
	border-radius 5px
	border 3px solid black

.game-field
	col()
	size(10)
	display flex
	flex-direction column

.players 
	col()
	size(2)
	display flex
	flex-direction column
	height 100%
	.player 
		flex-basis 20%
		& + .player 
			border-top 3px solid black

.top-row 
	border-bottom 3px solid black
	display flex

.middle-row 
	flex-grow 2
	display flex
	.col
		display flex
	.col-left, .col-right 
		display flex
		flex-direction column

.bottom-row 
	border-top 3px solid black
	display flex

.square
	position relative
	width 15%
	&-content 
		position absolute
		top 0
		left 0
		right 0
		bottom 0
	&-height
		padding-top 100%

.cell 
	width 6.36%

.col-left, .col-right 
	width 15%

.top-border 
	border-top 3px solid black
.left-border 
	border-left 3px solid black
.right-border 
	border-right 3px solid black

.col 
	width 70%

.col-inner
	width 100%
	row-flex()
	.interface 
		col()
		size(9)
	.text 
		col()
		size(3)

.col-left .cell, .col-right .cell
	width 100%
	flex-basis 18%

.col-left .cell-big, .col-right .cell-big
	flex-basis 28%